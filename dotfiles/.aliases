alias ga='git add'
alias gb='git switch'
alias gca='git commit -a --amend --no-edit'
alias gci='git commit'
alias gco='git restore'
alias gdi='git diff'
alias gf='git fetch origin'
alias gl='git log --oneline --graph'
alias gm='git merge'
