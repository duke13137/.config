[user]
	name = Duke
	email = duke@home.com
[column]
	ui = auto
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[merge]
	conflictstyle = diff3
[pull]
	rebase = true
[push]
	autoSetupRemote = true
	followTags = true
[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true
[rerere]
	enabled = true
[alias]
  br = branch
  co = checkout
  ci = commit
  st = status
  sync = "!f() { \\\n  BASE=${1:-main}; \\\n  git fetch origin $BASE && git rebase origin/$BASE; \\\n}; f"
  fixup = "!f() { git commit --fixup=$1 --no-verify && git -c sequence.editor=: rebase -i --autosquash $1^; }; f"
